// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GeneralCategory {
  @@map(name: "generalCategory")
  id Int @default(autoincrement()) @id
  name String @db.VarChar(255) @unique
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  generalSubCategory GeneralSubCategory[]
}

model GeneralSubCategory {
  @@map(name: "generalSubCategory")
  id Int @default(autoincrement()) @id
  name String @db.VarChar(255) @unique
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  generalCategory GeneralCategory @relation(fields: [generalCategoryId], references: [id])
  generalCategoryId Int
  flashCardCategory FlashCardCategory[]
}

model FlashCardCategory {
  @@map(name: "flashCardCategory")
  id Int @default(autoincrement()) @id
  name String @db.VarChar(255) @unique
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  generalSubCategory GeneralSubCategory @relation(fields: [generalSubCategoryId], references: [id])
  generalSubCategoryId Int
  mainFlashCard MainFlashCard[]
}

model MainFlashCard {
  @@map(name: "mainFlashCard")
  id Int @default(autoincrement()) @id
  title String @db.VarChar(255) @unique
  content String @db.VarChar(500)
  author String @db.VarChar(255)
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  flashCardCategory FlashCardCategory @relation(fields: [flashCardCategoryId], references: [id])
  flashCardCategoryId Int
}
